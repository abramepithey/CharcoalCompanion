@model CharcoalCompanion.Models.Plans.PlanUpdate

@{
    ViewBag.Title = "Edit Plan";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PlanUpdate</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PlanId)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StepOneId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var step in Model.Meats)
                {
                    <div>
                        @Html.DisplayFor(modelItem => step.Name)
                        @Html.RadioButtonFor(model => model.StepOneId, step.StepId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                }
                @Html.ValidationMessageFor(model => model.StepOneId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StepTwoId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var step in Model.Cuts)
                {
                    <div>
                        @Html.Label(step.Name)
                        @Html.RadioButtonFor(model => model.StepTwoId, step.StepId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                }
                @Html.ValidationMessageFor(model => model.StepTwoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StepThreeId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var step in Model.CharcoalSetups)
                {
                    <div>
                        @Html.Label(step.Name)
                        @Html.RadioButtonFor(model => model.StepThreeId, step.StepId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                }
                @Html.ValidationMessageFor(model => model.StepThreeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsSaved, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsSaved)
                    @Html.ValidationMessageFor(model => model.IsSaved, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
