@model IEnumerable<CharcoalCompanion.Models.Recipes.RecipeListItem>

@{
    ViewBag.Title = "Recipes";
}

<h2>Recipes</h2>

<p>
    @Html.ActionLink("Create a Recipe", "Create", "", new { @class = "btn btn-primary" })
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
else if (TempData.ContainsKey("NoResult"))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["NoResult"]
    </div>
}
<div class="row mx-0">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RecipeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.RecipeId }, new { @class = "btn btn-sm btn-secondary" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.RecipeId }, new { @class = "btn btn-sm btn-secondary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.RecipeId }, new { @class = "btn btn-sm btn-secondary" })
                </td>
            </tr>
        }

    </table>
</div>
